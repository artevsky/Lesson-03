/* Имеется следующая задача: надо получить ряд случайных чисел, и посчитать среднее арифметическое от них. 
Ввод чисел прекращается, если очередным числом будет ноль.
*/
double sr = 0;
double sum =0;
int n = 0;
int x = (int)(Math.random()*20);
while(x != 0)
{
  sum += x;
  n ++;
  x = (int)(Math.random()*20);
}
if(n != 0)
{
  sr = sum / n;
}
else 
  sr = 0;
System.out.println("среднее:" + sr);
+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ 2 ВАРИАНТ ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
double sr = 0;
double sum =0;
int n = 0;
int x = 0;
do
{
  x = (int)(Math.random()*20);
  sum += x;
  n ++;
}while(x != 0);
n--;
if(n != 0)
{
  sr = sum / n;
}
else 
  sr = 0;
System.out.println("среднее:" + sr);

----------------------------------------------------------------------------------------------------------------------------------------
/*Введите недостающие выражения в коде, так, чтобы в результате работы оператора while в переменной s оказалась сумма всех четных чисел 
между 0 и 100 .*/
int i = 2;
int s = 0;
while(i <= 100){
  s += i;  
  i+=2;
}
----------------------------------------------------------------------------------------------------------------------------------------
/*Имеется фрагмент программы вычисляющей сумму чисел от 1 до 100. Расставьте в ней строки в правильном порядке:
*/
int s=0; // содержит сумму
int i=0; // содержит число
do {
s+=i;
i++;
} while (i<=100):
System.out.println("Сумма = " + s);
